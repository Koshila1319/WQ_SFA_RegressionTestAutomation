<?xml version="1.0" encoding="UTF-8"?>
<suite name="Regression">
	<test name="Create Client">
		<classes>
			<class name="com.totalamber.qa.SupportLoginTest">
				<methods>
					<include name="verifyDeleteSoftwareApplication" />
					<include name="verifyClientSignup" />
				</methods>
			</class>

			<class name="com.totalamber.qa.SalesManagerTest">
				<methods>
					<include name="verifyAssignClientToAM" />
				</methods>
			</class>

			<class name="com.totalamber.qa.AccountManagerTest">
				<methods>
					<include name="accountManagerVerifyUserInfo" />
				</methods>
			</class>
		</classes>
	</test>

	<test name="Support User Activation">
		<classes>
			<class name="com.totalamber.qa.SupportLoginTest">
				<methods>
					<include name="verifyRequestAssignUsers"/>
				</methods>
			</class>
			<class name="com.totalamber.qa.AccountManagerTest">
				<methods>
					<include name="assignUsers"/>
				</methods>
			</class>
		</classes>
	</test>

	<test name="Activate Support User">
		<classes>
			<class name="com.totalamber.qa.SupportLoginTest">
				<methods>
					<include name="verifySuccessfullyActivateSupportUser"/>
				</methods>
			</class>
		</classes>
	</test>

	<test name="Create Cases">
		<classes>
			<class name="com.totalamber.qa.SupportLoginTest">
				<methods>
					<include name="verifyUserAbleToViewClosedCases"/>
				</methods>
			</class>
			<class name ="com.totalamber.qa.SysAidLoginTest">
				<methods>
					<include name = "AssignCase"/>
				</methods>
			</class>
		</classes>
	</test>
</suite>